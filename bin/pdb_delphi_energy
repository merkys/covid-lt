#!/bin/bash

TMPFILE=$(mktemp)
cat "$@" > ${TMPFILE}

delphi <(cat <<END
    in(pdb,file="${TMPFILE}")
    in(siz,file="delphi-parameters/amber.siz")
    in(crg,file="delphi-parameters/amber.crg")

    indi =  2.0
    exdi = 80.0
    salt =  0.0

    maxc  = 0.0001
    nonit = 800

    energy(s,c,g)
END
)

rm -f ${TMPFILE}
